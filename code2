//Code 2


public class Dice{
    int dicevalue;
    public int roll(){
        dicevalue = ((int)(Math.random()*6))+1;
        return(dicevalue);
    }
     
    
    public static void main(String[] args){
        Dice[] a=new Dice[2];
        a[0] =new Dice();
        System.out.println(a[0].roll());

    
}
}



   
//Code 3

// The Dice Game, the user has to roll the dice until he gets 2

public class RollGame
{
    public static void main (String[] args) {
	    RollGame newGame = new RollGame();
	    newGame.start();
}
	
	
	public void start(){
	    
	    int a[]={0,1,2};
	    
	    int i=0;
	    
	    double numberOfGames=2;
	    
	    for(int x=0;x<=numberOfGames;x++){
	        
	    
	    System.out.println("The game starts now!keep rolling the die until we get 2\n");
	    
	    while(a[i]!=2){
	       a[i]++;
	          
	    }
	    
	  
	    System.out.println("The game has ended because you have rolled a as "+  a[i]+"\n");
	    break;
	  
	    }
	}
}


